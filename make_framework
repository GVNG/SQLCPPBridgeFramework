export DEVPATH=/Applications/Xcode.app/Contents/Developer/Platforms/iPhoneOS.platform/Developer/SDKs/iPhoneOS.sdk
export ARCH="armv7"
export TOS="ios"
make clean
make
export ARCH="armv7s"
make clean
make
export ARCH="arm64"
make clean
make
export DEVPATH=/Applications/Xcode.app/Contents/Developer/Platforms/iPhoneSimulator.platform/Developer/SDKs/iPhoneSimulator.sdk
export ARCH="x86_64"
make clean
make

FRAMEWORK_NAME="sqlcppbridge"
FRAMEWORK="./build/${FRAMEWORK_NAME}.framework"
rm -rf "$FRAMEWORK"
mkdir "$FRAMEWORK"

cp -R "SQLBridge/include/." "$FRAMEWORK/Headers"

lipo -arch armv7 "lib/$FRAMEWORK_NAME-ios-armv7.a" \
	 -arch armv7s "lib/$FRAMEWORK_NAME-ios-armv7s.a" \
	 -arch arm64 "lib/$FRAMEWORK_NAME-ios-arm64.a" \
	 -arch x86_64 "lib/$FRAMEWORK_NAME-ios-x86_64.a" \
	 -create -output "$FRAMEWORK/$FRAMEWORK_NAME"

export DEVPATH=/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.13.sdk
export ARCH="x86_64"
export TOS="osx"
make clean
make
export ARCH="i386"
make clean
make
export DEVPATH=
export ARCH=
export TOS=

FRAMEWORK_NAME="sqlcppbridge-osx"
FRAMEWORK="./build/${FRAMEWORK_NAME}.framework"
rm -rf "$FRAMEWORK"
mkdir "$FRAMEWORK"

cp -R "SQLBridge/include/." "$FRAMEWORK/Headers"

lipo -arch i386 "lib/$FRAMEWORK_NAME-i386.a" \
     -arch x86_64 "lib/$FRAMEWORK_NAME-x86_64.a" \
     -create -output "$FRAMEWORK/$FRAMEWORK_NAME"

rm -r     ./lib
rm -r     build/sb_*
